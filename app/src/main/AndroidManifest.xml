<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.culturebud">

    <!-- common start -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />
    <!-- common end -->

    <!-- shareSDK start -->
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- 蓝牙分享所需的权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <!-- shareSDK end -->

    <!-- zxing start -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- zxing end -->

    <application
        android:name=".BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.WelcomeActivity"
            android:theme="@style/Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.MainActivity"></activity>
        <activity
            android:name=".ui.me.LoginActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />
        <activity android:name=".ui.community.CommunityActivity" />
        <activity android:name=".ui.me.AccountSettingActivity" />
        <activity android:name=".ui.me.AboutActivity" />
        <activity android:name=".ui.me.FeedbackActivity" />
        <activity android:name=".ui.me.UserAgreementActivity" />
        <activity android:name=".ui.me.UserInfoActivity" />
        <activity android:name=".ui.bcircle.PublishDynamicActivity" />
        <activity android:name=".ui.front.BookStoreActivity" />
        <activity android:name=".ui.search.SearchBookActivity" />
        <activity android:name=".ui.search.SearchBookCommunityActivity" />
        <activity android:name=".ui.front.BookDetailActivity" />
        <activity android:name=".ui.front.BookBaseInfoActivity" />
        <activity android:name=".ui.front.BookSheetDetailActivity" />
        <activity
            android:name=".ui.community.CommentDetailActivity"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />
        <activity android:name=".ui.bhome.CollectedBooksActivity" />
        <activity android:name=".ui.community.BookCommunityActivity" />
        <activity
            android:name=".ui.community.PublishShortCommentActivity"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />
        <activity android:name=".ui.me.AlterUserInfoActivity" />
        <activity android:name=".ui.me.MyMsgActivity" />
        <activity android:name=".ui.me.MyFavoritesActivity" />
        <activity android:name=".ui.me.RegistActivity" />
        <activity android:name=".ui.me.RetrievePasswordActivity" />
        <activity android:name=".ui.me.ChangePasswordActivity" />
        <activity android:name=".ui.community.MyCommunityActivity" />
        <activity android:name=".ui.bcircle.BookCircleActivity" />
        <activity android:name=".ui.bhome.NotebookActivity" />
        <activity android:name=".ui.bhome.CreateNotebookActivity" />
        <activity android:name=".ui.bhome.NotebookDetailActivity" />
        <activity android:name=".ui.bhome.EditNotebookNameActivity" />
        <activity android:name=".ui.bhome.CreateNoteActivity" />
        <activity android:name=".ui.bhome.EditNoteActivity" />
        <activity android:name=".ui.bhome.BookScanActivity" />
        <activity android:name=".ui.bhome.BookScanResultActivity" />
        <activity
            android:name=".ui.me.MyFriendsActivity"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />

        <activity
            android:name="com.mob.tools.MobUIShell"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="stateHidden|adjustResize">

            <intent-filter>
                <data android:scheme="tencent100371282" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- 调用新浪原生SDK，需要注册的回调activity -->
            <intent-filter>
                <action android:name="com.sina.weibo.sdk.action.ACTION_SDK_REQ_ACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!--微信分享回调 -->
        <activity
            android:name="com.wxapi.WXEntryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
    </application>

</manifest>
