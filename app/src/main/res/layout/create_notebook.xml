<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="15dp">

    <EditText
        android:id="@+id/et_notebook_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:hint="笔记本名（最多不超过15个字）"
        android:maxLength="15"
        android:maxLines="2"
        android:padding="3dp"
        android:textColor="@color/title_font_default"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dash_border_bg"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_book_sheet_cover"
            android:layout_width="36dp"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:padding="2dp"
            android:visibility="gone"
            fresco:actualImageScaleType="fitXY"
            fresco:placeholderImage="@mipmap/img_placeholder"
            fresco:placeholderImageScaleType="fitXY" />

        <TextView
            android:id="@+id/tv_select_book"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:padding="3dp"
            android:text="+ 做笔记请选择一本书"
            android:textColor="@color/title_font_default"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>