<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_book_cover"
        android:layout_width="50dp"
        android:layout_height="70dp"
        fresco:actualImageScaleType="fitXY"
        fresco:placeholderImage="@mipmap/img_placeholder"
        fresco:placeholderImageScaleType="fitXY" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_bg"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:scaleType="centerInside"
        android:src="@mipmap/more_operas" />

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@id/iv_add"
        android:layout_toRightOf="@id/sdv_book_cover"
        android:gravity="center_vertical"
        android:text="这是一本书"
        android:textColor="@color/title_font_default"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_book_name"
        android:layout_alignRight="@id/tv_book_name"
        android:layout_below="@id/tv_book_name"
        android:gravity="center_vertical"
        android:text="那个人写的"
        android:textColor="@color/front_more_font"
        android:textSize="14sp" />

</RelativeLayout>