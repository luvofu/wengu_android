<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="5dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_book_sheet_cover"
        android:layout_width="50dp"
        android:layout_height="70dp"
        fresco:actualImageScaleType="fitXY"
        fresco:placeholderImage="@mipmap/img_placeholder"
        fresco:placeholderImageScaleType="fitXY" />

    <ImageView
        android:id="@+id/iv_opt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/circle_bg"
        android:layout_marginLeft="5dp"
        android:scaleType="centerInside"
        android:src="@mipmap/more_operas" />

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@id/iv_opt"
        android:layout_toRightOf="@id/sdv_book_sheet_cover"
        android:gravity="center_vertical"
        android:textColor="@color/title_font_default"
        android:textSize="14sp"
        tools:text="这是一本书" />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_book_name"
        android:layout_alignRight="@id/tv_book_name"
        android:layout_below="@id/tv_book_name"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:textColor="@color/font_more"
        android:textSize="12sp"
        tools:text="那个人写的" />

    <FrameLayout
        android:id="@+id/fl_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_book_name"
        android:layout_alignRight="@id/tv_book_name"
        android:layout_below="@id/tv_author"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:id="@+id/ll_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <RatingBar
                android:id="@+id/rb_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="5"
                android:progressBackgroundTint="@color/font_black_light"
                android:progressTint="@color/orange"
                android:rating="3"
                android:secondaryProgressTint="@color/yellow"
                android:stepSize="0.1" />

            <TextView
                android:id="@+id/tv_rating_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="@string/fill_score"
                android:textColor="@color/title_font_default"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_no_rating_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="暂无评分"
            android:textColor="@color/font_more"
            android:textSize="12sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_book_name"
        android:layout_alignRight="@id/fl_rating"
        android:layout_below="@id/fl_rating"
        android:layout_marginTop="8dp"
        android:background="@color/green">

        <TextView
            android:id="@+id/tv_recommend_reason"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:background="@color/light_gray"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.2"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/font_black_light"
            android:textSize="12sp"
            tools:text="推荐语：快睡觉去" />
    </LinearLayout>
</RelativeLayout>