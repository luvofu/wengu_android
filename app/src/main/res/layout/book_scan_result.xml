<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_scan_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="@string/scan_result_desc"
        android:textColor="@color/light_font_black"
        android:textSize="14sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_scan_books"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_add_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tabar_font_checked"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:padding="15dp"
        android:text="@string/book_select_count"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</LinearLayout>