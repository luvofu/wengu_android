<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/litter_gray_bg_border"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_reply_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/circle_bg"
        android:gravity="left|top"
        android:minLines="2"
        android:padding="5dp"
        android:textColor="@color/title_font_default"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/et_reply_input"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:background="@drawable/circle_bg"
        android:clickable="true"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="@string/send"
        android:textColor="@drawable/btn_reply_send_selector"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_at_friend"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@id/et_reply_input"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:onClick="onClick"
        android:scaleType="centerInside"
        android:src="@drawable/at_friend_selector" />

</RelativeLayout>