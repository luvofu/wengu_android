<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                              xmlns:app="http://schemas.android.com/apk/res-auto"
                                              xmlns:fresco="http://schemas.android.com/apk/res-auto"
                                              xmlns:tools="http://schemas.android.com/tools"
                                              android:id="@+id/srl_refresh"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent"
                                              android:background="#EEEEEE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_top"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@mipmap/book_home_top_bg">


            <ImageView
                android:id="@+id/iv_book_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="20dp"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/book_mark_selector"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_book_marks"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:background="@color/transparent"/>


            <RelativeLayout
                android:id="@+id/rl_pop"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@android:color/white"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_book_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/bottom_line_bg"
                    android:drawableRight="@mipmap/right_arrow"
                    android:gravity="center_vertical"
                    android:paddingRight="20dp"
                    android:text="@string/book_name"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_page_number"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_below="@id/tv_book_name"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/page_number"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_book_num"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_below="@id/tv_book_name"
                    android:layout_marginLeft="35dp"
                    android:layout_toRightOf="@id/tv_page_number"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    tools:text="1"/>

                <com.culturebud.widget.StepperView
                    android:id="@+id/sv_stepper"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_alignBottom="@id/tv_book_num"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/blue_circle_bg_dark"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:show_number="false"/>

            </RelativeLayout>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/ll_book_line01"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_collect"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle_bg"
                    android:drawableLeft="@mipmap/book_mark_collect"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="@string/collect_books"/>

                <TextView
                    android:id="@+id/tv_note"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle_bg"
                    android:drawableRight="@mipmap/book_mark_note"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="@string/notebooks"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/ll_book_line01"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sheet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle_bg"
                    android:drawableLeft="@mipmap/book_mark_sheet"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="@string/book_sheet"/>

                <TextView
                    android:id="@+id/tv_date_book"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle_bg"
                    android:drawableRight="@mipmap/book_mark_date"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="@string/tab_book_circle"/>

            </LinearLayout>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_scanner"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="@android:color/white"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/scaner_icon"
                fresco:placeholderImageScaleType="centerInside"
                fresco:roundAsCircle="true"
                fresco:roundingBorderColor="@color/litter_gray_bg_border"
                fresco:roundingBorderWidth="8dp"/>
        </RelativeLayout>


    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>