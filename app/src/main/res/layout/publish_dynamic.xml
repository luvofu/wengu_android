<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle_bg"
            android:gravity="left|top"
            android:inputType="text"
            android:padding="5dp"
            android:textColor="@color/title_font_default"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:padding="5dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_img"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:onClick="onClick"
                fresco:actualImageScaleType="fitXY"
                fresco:placeholderImage="@mipmap/pic_add"
                fresco:placeholderImageScaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_del"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top|right"
                android:clickable="true"
                android:onClick="onClick"
                android:scaleType="fitXY"
                android:src="@mipmap/common_icon_delete" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_added_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="4dp"
            android:visibility="gone">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_book_cover"
                android:layout_width="@dimen/setting_icon_default_middle"
                android:layout_height="@dimen/setting_icon_default_big"
                fresco:actualImageScaleType="fitXY"
                fresco:placeholderImage="@mipmap/img_placeholder"
                fresco:placeholderImageScaleType="fitXY" />

            <TextView
                android:id="@+id/tv_book_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/title_font_default"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_del_book"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:clickable="true"
                android:onClick="onClick"
                android:scaleType="fitXY"
                android:src="@mipmap/common_icon_delete" />
        </LinearLayout>
    </LinearLayout>

    <com.culturebud.widget.SettingItemView
        android:id="@+id/siv_permission"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/setting_item_bg_selector"
        android:clickable="true"
        android:onClick="onClick"
        app:has_icon="false"
        app:info="公开"
        app:name="谁可以看" />

</LinearLayout>