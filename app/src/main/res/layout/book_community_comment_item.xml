<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_face"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_margin="12dp"
        fresco:actualImageScaleType="fitXY"
        fresco:placeholderImage="@mipmap/me_default_icon"
        fresco:placeholderImageScaleType="fitXY"
        fresco:roundAsCircle="true"
        fresco:roundingBorderColor="@android:color/transparent"
        fresco:roundingBorderWidth="1dp" />

    <TextView
        android:id="@+id/tv_nick_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/sdv_face"
        android:textColor="@color/title_font_default"
        android:textSize="@dimen/front_item_name_font"
        tools:text="小忠子" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_nick_name"
        android:layout_below="@id/tv_nick_name"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:textColor="#777777"
        android:textSize="@dimen/front_item_name_font"
        tools:text="搞完这一行代码就回家睡觉去哦" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_nick_name"
        android:layout_below="@id/tv_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#777777"
            android:textSize="@dimen/front_item_small_font"
            tools:text="10-05 09:45" />

        <TextView
            android:id="@+id/tv_good_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@mipmap/good_false"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#777777"
            android:textSize="@dimen/front_item_small_font"
            tools:text="10-05 09:45" />

        <TextView
            android:id="@+id/tv_reply_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/reply_icon"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#777777"
            android:textSize="@dimen/front_item_small_font"
            tools:text="10-05 09:45" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/share_icon" />

    </LinearLayout>
</RelativeLayout>