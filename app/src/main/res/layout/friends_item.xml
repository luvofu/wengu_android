<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="3dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_friend_face"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        fresco:actualImageScaleType="fitXY"
        fresco:placeholderImage="@mipmap/me_default_icon"
        fresco:placeholderImageScaleType="fitXY"
        fresco:roundAsCircle="true"
        fresco:roundingBorderColor="@color/transparent"
        fresco:roundingBorderWidth="0.5dp" />

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_friend_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/title_font_default"
            android:textSize="14sp"
            tools:text="小书生" />

        <TextView
            android:id="@+id/tv_friend_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/font_black_light"
            android:textSize="12sp"
            tools:text="家住海边，喜欢浪。" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_opt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:drawablePadding="5dp"
        android:drawableTop="@mipmap/ic_friend_concern"
        android:gravity="center"
        android:padding="3dp"
        android:text="加关注"
        android:textColor="@color/green"
        android:textSize="10sp" />

</LinearLayout>