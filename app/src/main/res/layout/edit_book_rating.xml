<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/rating"
        android:textColor="@color/font_more"
        android:textSize="@dimen/content_font_default"/>

    <RatingBar
        android:id="@+id/rb_rating"
        style="?android:attr/ratingBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_rating"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:max="5"
        android:progressBackgroundTint="@color/font_black_light"
        android:progressTint="@color/orange"
        android:rating="3"
        android:secondaryProgressTint="@color/yellow"
        android:stepSize="0.1"/>

    <EditText
        android:id="@+id/et_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/circle_bg"
        android:gravity="left|top"
        android:hint="@string/write_some_idea"
        android:maxLines="8"
        android:minLines="8"
        android:padding="4dp"
        android:textColor="@color/title_font_default"
        android:textColorHint="@color/font_more"
        android:textSize="@dimen/content_font_default"/>

</LinearLayout>