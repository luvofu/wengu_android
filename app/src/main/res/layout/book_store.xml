<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_item_only_last_bg_selector">

        <RadioGroup
            android:id="@+id/rg_sort_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@android:color/white"
                android:button="@null"
                android:gravity="center"
                android:padding="15dp"
                android:text="评分"
                android:textColor="@drawable/tabar_font_selector"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_collect_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rb_score"
                android:background="@android:color/white"
                android:button="@null"
                android:gravity="center"
                android:padding="15dp"
                android:text="藏书量"
                android:textColor="@drawable/tabar_font_selector"
                android:textSize="14sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/white"
            android:gravity="center"
            android:padding="15dp"
            android:text="筛选"
            android:textColor="@drawable/tabar_font_selector"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_filter_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/book_filter_item_bg"
            android:drawableRight="@mipmap/ic_vbar"
            android:gravity="center"
            android:textSize="13sp"
            android:visibility="gone" />
    </RelativeLayout>

    <com.culturebud.widget.NoDataView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_multiplestatusview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:emptyView="@layout/empty_view"
        app:errorView="@layout/error_view"
        app:loadingView="@layout/loading_view"
        app:noNetworkView="@layout/no_network_view">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/srl_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_books"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </com.culturebud.widget.NoDataView>

</LinearLayout>