<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/abl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorPrimary"
            app:expandedTitleMarginEnd="960dp"
            app:expandedTitleMarginStart="960dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <com.culturebud.widget.ScaleRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                app:ratio="1.476">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    fresco:actualImageScaleType="fitXY"
                    fresco:placeholderImageScaleType="fitXY" />

                <!--<ImageView-->
                <!--android:id="@+id/iv_back"-->
                <!--android:layout_width="48dp"-->
                <!--android:layout_height="48dp"-->
                <!--android:layout_marginTop="@dimen/common_padding_big"-->
                <!--android:clickable="true"-->
                <!--android:onClick="onClick"-->
                <!--android:scaleType="centerInside"-->
                <!--android:src="@drawable/titlebar_back_selector" />-->

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_face"
                    android:layout_width="@dimen/setting_icon_default_big"
                    android:layout_height="@dimen/setting_icon_default_big"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35dp"
                    fresco:actualImageScaleType="fitXY"
                    fresco:placeholderImage="@mipmap/me_default_icon"
                    fresco:placeholderImageScaleType="fitXY"
                    fresco:roundAsCircle="true" />

                <TextView
                    android:id="@+id/tv_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/sdv_face"
                    android:gravity="center"
                    android:textColor="@color/title_font_white_dark"
                    android:textSize="@dimen/titlebar_font_size"
                    tools:text="坏猫" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/my_transact"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_book_shelf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:padding="6dp"
                        android:text="@string/book_shelf"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@android:color/white" />

                    <TextView
                        android:id="@+id/tv_note"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:padding="6dp"
                        android:text="@string/notebooks"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@android:color/white" />

                    <TextView
                        android:id="@+id/tv_book_sheet"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:padding="6dp"
                        android:text="@string/book_sheet"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />
                </LinearLayout>

            </com.culturebud.widget.ScaleRelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/tlb"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/TitlebarPopupTheme"
                app:theme="@style/TitlebarTheme"
                app:title="@string/blank">

                <FrameLayout
                    android:id="@+id/toolbarContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="19dp">

                    <TextView
                        android:id="@+id/bcback"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="2dp"
                        android:clickable="true"
                        android:drawableLeft="@drawable/titlebar_back_selector"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:minWidth="48dp"
                        android:onClick="onClick"
                        android:padding="2dp"
                        android:textColor="@color/title_font_white"
                        android:textSize="16sp"
                        tools:text="返回" />

                    <TextView
                        android:id="@+id/bctitleview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lines="1"
                        android:maxWidth="120dp"
                        android:textColor="@color/title_font_white"
                        android:textSize="16sp" />

                </FrameLayout>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_dynamics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</android.support.design.widget.CoordinatorLayout>