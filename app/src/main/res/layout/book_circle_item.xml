<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="15dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_face"
        android:layout_width="36dp"
        android:layout_height="36dp"
        fresco:actualImageScaleType="centerInside"
        fresco:placeholderImage="@mipmap/me_default_icon"
        fresco:placeholderImageScaleType="centerInside"
        fresco:roundAsCircle="true"
        fresco:roundingBorderColor="@android:color/transparent"
        fresco:roundingBorderWidth="0.5dp" />

    <TextView
        android:id="@+id/tv_nick_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/sdv_face"
        android:gravity="center_vertical"
        android:textSize="12sp"
        tools:text="不止步的风" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_nick_name"
        android:layout_below="@id/tv_nick_name"
        android:paddingBottom="10dp" />

    <LinearLayout
        android:id="@+id/ll_virtual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_nick_name"
        android:layout_below="@id/tv_content"
        android:orientation="vertical">

        <ViewStub
            android:id="@+id/vs_image"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:layout_alignLeft="@id/tv_nick_name"
            android:layout_below="@id/tv_content"
            android:layout_marginBottom="10dp" />

        <ViewStub
            android:id="@+id/vs_type_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_nick_name"
            android:layout_below="@id/vs_image"
            android:background="@color/litter_gray_bg_border" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_operas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_nick_name"
        android:layout_below="@id/ll_virtual"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#777777"
            android:textSize="@dimen/front_item_small_font"
            tools:text="10-05 09:45" />

        <TextView
            android:id="@+id/tv_good_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@mipmap/good_false"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColor="#777777"
            android:textSize="@dimen/front_item_small_font"
            tools:text="10" />

        <TextView
            android:id="@+id/tv_reply_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@mipmap/reply_icon"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColor="#777777"
            android:textSize="@dimen/front_item_small_font"
            tools:text="15" />

    </LinearLayout>

    <ViewStub
        android:id="@+id/vs_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_nick_name"
        android:layout_below="@id/ll_operas"
        android:background="@color/litter_gray_bg_border" />
</RelativeLayout>