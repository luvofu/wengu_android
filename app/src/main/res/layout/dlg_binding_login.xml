<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/white_circle_bg"
              android:orientation="vertical"
              android:padding="@dimen/common_padding_big">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:onClick="onCloseBinding"
        android:src="@mipmap/edittext_del"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="为了账号安全，首次登录需要绑定手机号"
        android:textColor="@color/font_black_dark"
        android:textSize="@dimen/font_default"/>

    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_border_bg"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="输入手机号"
        android:inputType="phone"
        android:maxEms="11"
        android:maxLength="11"
        android:maxLines="1"
        android:padding="@dimen/common_padding_big"
        android:textColor="@color/font_black_dark"
        android:textColorHint="@color/font_more"
        android:textSize="@dimen/font_default"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/et_security_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border_bg"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="输入手机验证码"
            android:inputType="number"
            android:maxEms="6"
            android:maxLength="6"
            android:maxLines="1"
            android:padding="@dimen/common_padding_big"
            android:textColor="@color/font_black_dark"
            android:textColorHint="@color/font_more"
            android:textSize="@dimen/font_default"/>

        <TextView
            android:id="@+id/tv_obtain_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="25dp"
            android:onClick="onClick"
            android:paddingBottom="@dimen/common_padding_big"
            android:paddingTop="15dp"
            android:text="获取验证码"
            android:textColor="@color/front_hot_font"
            android:textSize="@dimen/font_web"/>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_padding_default"
        android:text="如果该手机已注册过文芽帐号，您的微信将绑定到该账号"
        android:textColor="@color/front_hot_font"
        android:textSize="@dimen/font_web"/>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_middle"
        android:background="@drawable/login_btn_selector"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/confirm"
        android:textColor="@color/title_font_white"
        android:textSize="@dimen/font_big"/>

</LinearLayout>